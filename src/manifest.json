{
  "name": "Newsela Tool",
  "description": "Newsela-helper-tools",
  "version": null,
  "manifest_version": 2,
  "permissions": [
    "storage",
    "alarms",
    "clipboardWrite",
    "clipboardRead",
    "tabs",
    "activeTab",
    "declarativeContent",
    "webNavigation"
  ],
  "icons": {
    "48": "icons/newsela-logo.png",
    "128": "icons/newsela-logo.png"
  },
  "browser_action": {
    "default_title": "extension-ct",
    "default_popup": "popup/popup.html"
  },
  "sandbox": {
    "pages": [
      "popup.html"    ]
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content/content.js",
        "content/main-newsela.js"      ]
    }
  ]
}